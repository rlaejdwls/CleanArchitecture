<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cleanarchitecture">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.example.cleanarchitecture.CleanApp"
        android:theme="@style/app_theme">
        <activity android:name="com.example.cleanarchitecture.task.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.cleanarchitecture.task.search.SearchActivity" />
        <activity android:name="com.example.cleanarchitecture.task.detail.DetailActivity" />
    </application>

</manifest>